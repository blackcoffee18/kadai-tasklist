<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<ul style="list-style:none">
  <li><%= f.label :status, 'ステータス（0字以上10字以内）' %></li>
  <li><%= f.text_field :status %></li>
  <br>
  <li><%= f.label :content, 'コンテント（0字以上255字以内）' %></li>
  <li><%= f.text_field :content %></li>
</ul>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
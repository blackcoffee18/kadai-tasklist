<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

  <h1>タスク一覧</h1>
  
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タイトル</th>
          <th>メッセージ</th>
        </tr>
      </thead>
      
      <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
  <br>
  <%= link_to '新規投稿', new_task_path(@task), class: "btn btn-primary" %>
    
  <% else %>
    <div class="center jumbotron">
      <div class="text-center">
        <h1>Welcome to the Microposts</h1>
        <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>　　
        <%= link_to 'Login now!', login_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
<% end %>